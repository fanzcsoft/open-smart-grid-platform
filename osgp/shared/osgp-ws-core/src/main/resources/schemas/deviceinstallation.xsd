<xsd:schema xmlns:common="http://www.opensmartgridplatform.org/schemas/common/2014/10"
  xmlns:tns="http://www.opensmartgridplatform.org/schemas/deviceinstallation/2014/10"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  attributeFormDefault="unqualified" elementFormDefault="qualified"
  targetNamespace="http://www.opensmartgridplatform.org/schemas/deviceinstallation/2014/10">

  <xsd:complexType name="Device">
    <xsd:sequence>
      <xsd:element minOccurs="0" name="DeviceUid"
        type="xsd:string"/>
      <xsd:element name="DeviceIdentification" type="common:Identification"/>
      <xsd:element minOccurs="0" name="Alias" type="xsd:string"/>
      <xsd:element name="Owner" type="xsd:string"/>
      <xsd:element minOccurs="0" name="ContainerAddress" type="common:Address"/>
      <xsd:element minOccurs="0" name="GpsLatitude"
        type="xsd:float"/>
      <xsd:element minOccurs="0" name="GpsLongitude"
        type="xsd:float"/>
      <xsd:element minOccurs="0" name="Activated"
        type="xsd:boolean"/>
      <xsd:element minOccurs="0" name="HasSchedule"
        type="xsd:boolean"/>
      <xsd:element minOccurs="0" name="PublicKeyPresent"
        type="xsd:boolean"/>
      <xsd:element name="DeviceModel" type="tns:DeviceModel"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="LightMeasurementDevice">
    <xsd:sequence>
      <xsd:element name="DeviceIdentification" type="common:Identification"/>
      <xsd:element minOccurs="0" name="Alias" type="xsd:string"/>
      <xsd:element name="Owner" type="xsd:string"/>
      <xsd:element minOccurs="0" name="ContainerAddress" type="common:Address"/>
      <xsd:element minOccurs="0" name="GpsLatitude"
        type="xsd:float"/>
      <xsd:element minOccurs="0" name="GpsLongitude"
        type="xsd:float"/>
      <xsd:element minOccurs="0" name="Activated"
        type="xsd:boolean"/>
      <xsd:element name="DeviceModel" type="tns:DeviceModel"/>
      <xsd:element minOccurs="0" name="Description" type="xsd:string"/>
      <xsd:element minOccurs="0" name="Code" type="xsd:string"/>
      <xsd:element minOccurs="0" name="Color" type="xsd:string"/>
      <xsd:element name="DigitalInput" type="xsd:short"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="DeviceStatus">
    <xsd:annotation>
      <xsd:documentation>
        DeviceStatus represents the retrieved status of a smart device.
      </xsd:documentation>
    </xsd:annotation>
    <xsd:sequence>
      <xsd:element maxOccurs="unbounded" name="LightValues"
        type="tns:LightValue">
        <xsd:annotation>
          <xsd:documentation>
            The list of 'LightValues' can contain:
            - relay status values in case of SSLD (Substation Lighting Device) smart devices;
            - light sensor values in case of LMD (Light Measurement Device) smart devices.
          </xsd:documentation>
        </xsd:annotation>
      </xsd:element>
      <xsd:element maxOccurs="unbounded" name="TariffValues"
        type="tns:TariffValue"/>
      <xsd:element maxOccurs="1" minOccurs="1"
        name="PreferredLinkType" type="tns:LinkType"/>
      <xsd:element maxOccurs="1" minOccurs="1"
        name="ActualLinkType" type="tns:LinkType"/>
      <xsd:element maxOccurs="1" minOccurs="0"
        name="LightType" type="tns:LightType"/>
      <xsd:element maxOccurs="8" minOccurs="0"
        name="EventNotifications" type="tns:EventNotificationType"/>
      <xsd:element maxOccurs="1" minOccurs="0"
        name="NumberOfOutputs" type="xsd:int"/>
      <xsd:element maxOccurs="1" minOccurs="0"
        name="DcOutputVoltageMaximum" type="xsd:int"/>
      <xsd:element maxOccurs="1" minOccurs="0"
        name="DcOutputVoltageCurrent" type="xsd:int"/>
      <xsd:element maxOccurs="1" minOccurs="0"
        name="MaximumOutputPowerOnDcOutput" type="xsd:int"/>
      <xsd:element maxOccurs="1" minOccurs="0"
        name="SerialNumber">
        <xsd:simpleType>
          <xsd:restriction base="xsd:string">
            <xsd:maxLength value="18"/>
            <xsd:minLength value="0"/>
          </xsd:restriction>
        </xsd:simpleType>
      </xsd:element>
      <xsd:element maxOccurs="1" minOccurs="0"
        name="MacAddress">
        <xsd:simpleType>
          <xsd:restriction base="xsd:string">
            <xsd:length value="17"/>
          </xsd:restriction>
        </xsd:simpleType>
      </xsd:element>
      <xsd:element maxOccurs="1" minOccurs="0"
        name="HardwareId">
        <xsd:simpleType>
          <xsd:restriction base="common:AlphaNumericType">
            <xsd:maxLength value="25"/>
            <xsd:minLength value="10"/>
          </xsd:restriction>
        </xsd:simpleType>
      </xsd:element>
      <xsd:element maxOccurs="1" minOccurs="0"
        name="InternalFlashMemSize" type="xsd:int"/>
      <xsd:element maxOccurs="1" minOccurs="0"
        name="ExternalFlashMemSize" type="xsd:int"/>
      <xsd:element maxOccurs="1" minOccurs="0"
        name="LastInternalTestResultCode" type="xsd:int"/>
      <xsd:element maxOccurs="1" minOccurs="0"
        name="StartupCounter" type="xsd:int"/>
      <xsd:element maxOccurs="1" minOccurs="0"
        name="BootLoaderVersion" type="xsd:string"/>
      <xsd:element maxOccurs="1" minOccurs="0"
        name="FirmwareVersion" type="xsd:string"/>
      <xsd:element maxOccurs="1"
        minOccurs="0" name="CurrentConfigurationBackUsed">
        <xsd:simpleType>
          <xsd:restriction base="xsd:int">
            <xsd:maxInclusive value="1"/>
            <xsd:minInclusive value="0"/>
          </xsd:restriction>
        </xsd:simpleType>
      </xsd:element>
      <xsd:element maxOccurs="1" minOccurs="0" name="Name"
        type="xsd:string"/>
      <xsd:element maxOccurs="1" minOccurs="0"
        name="CurrentTime" type="xsd:string"/>
      <xsd:element maxOccurs="1" minOccurs="0"
        name="CurrentIp" type="xsd:string"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="LightValue">
    <xsd:sequence>
      <xsd:element minOccurs="0" name="Index">
        <xsd:simpleType>
          <xsd:restriction base="xsd:int">
            <xsd:maxInclusive value="6"/>
            <xsd:minInclusive value="0"/>
          </xsd:restriction>
        </xsd:simpleType>
      </xsd:element>
      <xsd:element name="On" type="xsd:boolean"/>
      <xsd:element minOccurs="0" name="DimValue">
        <xsd:simpleType>
          <xsd:restriction base="xsd:int">
            <xsd:maxInclusive value="100"/>
            <xsd:minInclusive value="1"/>
          </xsd:restriction>
        </xsd:simpleType>
      </xsd:element>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="TariffValue">
    <xsd:sequence>
      <xsd:element minOccurs="0" name="Index">
        <xsd:simpleType>
          <xsd:restriction base="xsd:int">
            <xsd:maxInclusive value="6"/>
            <xsd:minInclusive value="0"/>
          </xsd:restriction>
        </xsd:simpleType>
      </xsd:element>
      <xsd:element name="High" type="xsd:boolean"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="DeviceModel">
    <xsd:sequence>
      <xsd:element maxOccurs="1" minOccurs="1"
        name="Manufacturer">
        <xsd:simpleType>
          <xsd:restriction base="xsd:string">
            <xsd:maxLength value="4"/>
          </xsd:restriction>
        </xsd:simpleType>
      </xsd:element>
      <xsd:element maxOccurs="1" minOccurs="1" name="ModelCode">
        <xsd:simpleType>
          <xsd:restriction base="xsd:string">
            <xsd:maxLength value="255"/>
          </xsd:restriction>
        </xsd:simpleType>
      </xsd:element>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:element name="AddDeviceRequest">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="Device" type="tns:Device"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="AddDeviceResponse">
    <xsd:complexType/>
  </xsd:element>

  <xsd:element name="UpdateDeviceRequest">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="DeviceIdentification" type="common:Identification"/>
        <xsd:element name="UpdatedDevice" type="tns:Device"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="UpdateDeviceResponse">
    <xsd:complexType/>
  </xsd:element>

  <xsd:element name="AddLightMeasurementDeviceRequest">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="LightMeasurementDevice" type="tns:LightMeasurementDevice"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="AddLightMeasurementDeviceResponse">
    <xsd:complexType/>
  </xsd:element>

  <xsd:element name="UpdateLightMeasurementDeviceRequest">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="DeviceIdentification" type="common:Identification"/>
        <xsd:element name="UpdatedLightMeasurementDevice" type="tns:LightMeasurementDevice"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="UpdateLightMeasurementDeviceResponse">
    <xsd:complexType/>
  </xsd:element>

  <xsd:element name="FindRecentDevicesRequest">
    <xsd:complexType>
      <xsd:sequence>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="FindRecentDevicesResponse">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element maxOccurs="unbounded" name="Devices"
          type="tns:Device"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="GetStatusRequest">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element minOccurs="1" name="DeviceIdentification"
          type="common:Identification"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="GetStatusAsyncResponse">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="AsyncResponse" type="common:AsyncResponse"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="GetStatusAsyncRequest">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="AsyncRequest" type="common:AsyncRequest"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="GetStatusResponse">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element minOccurs="1" name="Result"
          type="common:OsgpResultType"/>
        <xsd:element name="Description" type="xsd:string"/>
        <xsd:element name="DeviceStatus" type="tns:DeviceStatus"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="StartDeviceTestRequest">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="DeviceIdentification" type="common:Identification"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="StartDeviceTestAsyncResponse">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="AsyncResponse" type="common:AsyncResponse"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="StartDeviceTestAsyncRequest">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="AsyncRequest" type="common:AsyncRequest"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="StartDeviceTestResponse">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element minOccurs="1" name="Result"
          type="common:OsgpResultType"/>
        <xsd:element name="Description" type="xsd:string"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="StopDeviceTestRequest">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="DeviceIdentification" type="common:Identification"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="StopDeviceTestAsyncResponse">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="AsyncResponse" type="common:AsyncResponse"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="StopDeviceTestAsyncRequest">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="AsyncRequest" type="common:AsyncRequest"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="StopDeviceTestResponse">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element minOccurs="1" name="Result"
          type="common:OsgpResultType"/>
        <xsd:element name="Description" type="xsd:string"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:import namespace="http://www.opensmartgridplatform.org/schemas/common/2014/10"
    schemaLocation="../schemas/common-ws-core.xsd"/>

  <xsd:simpleType name="IPType">
    <xsd:restriction base="xsd:string">
      <xsd:pattern
        value="((1?[0-9]?[0-9]|2[0-4][0-9]|25[0-5]).){3}(1?[0-9]?[0-9]|2[0-4][0-9]|25[0-5])"/>
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:simpleType name="LightType">
    <xsd:restriction base="xsd:string">
      <xsd:enumeration value="LT_NOT_SET"/>
      <xsd:enumeration value="RELAY"/>
      <xsd:enumeration value="ONE_TO_TEN_VOLT"/>
      <xsd:enumeration value="ONE_TO_TEN_VOLT_REVERSE"/>
      <xsd:enumeration value="ONE_TO_TWENTY_FOUR_VOLT"/>
      <xsd:enumeration value="DALI"/>
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:simpleType name="LinkType">
    <xsd:restriction base="xsd:string">
      <xsd:enumeration value="LINK_NOT_SET"/>
      <xsd:enumeration value="GPRS"/>
      <xsd:enumeration value="CDMA"/>
      <xsd:enumeration value="ETHERNET"/>
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:simpleType name="EventNotificationType">
    <xsd:restriction base="xsd:string">
      <xsd:enumeration value="DIAG_EVENTS"/>
      <xsd:enumeration value="HARDWARE_FAILURE"/>
      <xsd:enumeration value="LIGHT_EVENTS"/>
      <xsd:enumeration value="TARIFF_EVENTS"/>
      <xsd:enumeration value="MONITOR_EVENTS"/>
      <xsd:enumeration value="FIRMWARE_EVENTS"/>
      <xsd:enumeration value="COMM_EVENTS"/>
      <xsd:enumeration value="SECURITY_EVENTS"/>
    </xsd:restriction>
  </xsd:simpleType>

</xsd:schema>

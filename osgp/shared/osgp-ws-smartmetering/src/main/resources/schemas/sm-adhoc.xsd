<xsd:schema xmlns:common="http://www.opensmartgridplatform.org/schemas/common/2014/10"
  xmlns:tns="http://www.opensmartgridplatform.org/schemas/smartmetering/sm-adhoc/2014/10"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  elementFormDefault="qualified"
  targetNamespace="http://www.opensmartgridplatform.org/schemas/smartmetering/sm-adhoc/2014/10">

  <xsd:complexType name="GetAllAttributeValuesRequestData">
    <xsd:complexContent>
      <xsd:extension base="common:Command">
        <xsd:sequence>
        </xsd:sequence>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>

  <xsd:complexType name="GetAllAttributeValuesResponseData">
    <xsd:complexContent>
      <xsd:extension base="common:Response">
        <xsd:sequence>
          <xsd:element name="AttributeValuesData" type="xsd:string"/>
        </xsd:sequence>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>

  <xsd:complexType name="GetSpecificAttributeValueRequestData">
    <xsd:complexContent>
      <xsd:extension base="common:Query">
        <xsd:sequence>
          <xsd:element name="ClassId" type="xsd:integer"/>
          <xsd:element name="Attribute" type="xsd:integer"/>
          <xsd:element name="ObisCode" type="common:ObisCodeValues"/>
        </xsd:sequence>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>

  <xsd:complexType name="GetSpecificAttributeValueResponseData">
    <xsd:complexContent>
      <xsd:extension base="common:Response">
        <xsd:sequence>
          <xsd:element name="AttributeValueData" type="xsd:string"/>
        </xsd:sequence>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>

  <xsd:complexType name="GetAssociationLnObjectsRequestData">
    <xsd:complexContent>
      <xsd:extension base="common:Command">
        <xsd:sequence>
        </xsd:sequence>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>

  <xsd:complexType name="AssociationLnObjectsResponseData">
    <xsd:complexContent>
      <xsd:extension base="common:Response">
        <xsd:sequence>
          <xsd:element name="AssociationLnList" type="tns:AssociationLnListType"/>
        </xsd:sequence>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>

  <xsd:complexType name="ScanMbusChannelsRequestData">
    <xsd:complexContent>
      <xsd:extension base="common:Command">
        <xsd:sequence>
        </xsd:sequence>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>

  <xsd:complexType name="ScanMbusChannelsResponseData">
    <xsd:complexContent>
      <xsd:extension base="common:Response">
        <xsd:sequence>
          <xsd:element maxOccurs="4" minOccurs="0"
            name="ChannelShortId" type="tns:MbusChannelShortEquipmentIdentifier"/>
        </xsd:sequence>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>

  <xsd:complexType name="MbusChannelShortEquipmentIdentifier">
    <xsd:sequence>
      <xsd:element name="Channel" type="common:Channel"/>
      <xsd:element name="ShortId" nillable="true" type="common:MbusShortEquipmentIdentifier"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="AssociationLnListType">
    <xsd:sequence>
      <xsd:element maxOccurs="unbounded" minOccurs="0"
        name="AssociationLnListElement" type="tns:AssociationLnListElement"/>
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="AssociationLnListElement">
    <xsd:sequence>
      <xsd:element name="ClassId" type="xsd:long"/>
      <xsd:element name="Version" type="xsd:integer"/>
      <xsd:element name="LogicalName" type="common:CosemObisCode"/>
      <xsd:element name="AccessRights" type="tns:AccessRight"/>
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="AccessRight">
    <xsd:sequence>
      <xsd:element name="AttributeAccess"
        type="tns:AttributeAccessDescriptor"/>
      <xsd:element name="MethodAccess" type="tns:MethodAccessDescriptor"/>
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="AttributeAccessDescriptor">
    <xsd:sequence>
      <xsd:element maxOccurs="unbounded" minOccurs="0"
        name="AttributeAccessItem" type="tns:AttributeAccessItem"/>
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="AttributeAccessItem">
    <xsd:sequence>
      <xsd:element name="AttributeId" type="xsd:integer"/>
      <xsd:element name="AccessMode" type="tns:AttributeAccessModeType"/>
      <xsd:element name="AccessSelectors" type="tns:AccessSelectorList"/>
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="AccessSelectorList">
    <xsd:sequence>
      <xsd:element maxOccurs="unbounded" minOccurs="0"
        name="AccessSelector" type="xsd:int"/>
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="MethodAccessDescriptor">
    <xsd:sequence>
      <xsd:element maxOccurs="unbounded" minOccurs="0"
        name="MethodAccessItem" type="tns:MethodAccessItem"/>
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="MethodAccessItem">
    <xsd:sequence>
      <xsd:element name="MethodId" type="xsd:integer"/>
      <xsd:element name="AccessMode" type="tns:MethodAccessModeType"/>
    </xsd:sequence>
  </xsd:complexType>
  <xsd:complexType name="SynchronizeTimeRequestData">
    <xsd:complexContent>
      <xsd:extension base="common:Command">
        <xsd:sequence>
          <xsd:element name="Deviation" type="common:DateTimeDeviation"/>
          <xsd:element default="false" name="Dst"
            type="xsd:boolean"/>
        </xsd:sequence>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>

  <xsd:element name="SynchronizeTimeRequest">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="DeviceIdentification" type="common:DeviceIdentification"/>
        <xsd:element name="SynchronizeTimeRequestData" type="tns:SynchronizeTimeRequestData"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="SynchronizeTimeAsyncResponse">
    <xsd:complexType>
      <xsd:complexContent>
        <xsd:extension base="common:AsyncResponse"/>
      </xsd:complexContent>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="SynchronizeTimeAsyncRequest">
    <xsd:complexType>
      <xsd:complexContent>
        <xsd:extension base="common:AsyncRequest"/>
      </xsd:complexContent>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="SynchronizeTimeResponse">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="Result" type="common:OsgpResultType"/>
        <xsd:element minOccurs="0" name="Description"
          type="xsd:string"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="GetAllAttributeValuesRequest">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="DeviceIdentification" type="common:DeviceIdentification"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="GetAllAttributeValuesAsyncResponse">
    <xsd:complexType>
      <xsd:complexContent>
        <xsd:extension base="common:AsyncResponse"/>
      </xsd:complexContent>
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="GetAllAttributeValuesAsyncRequest">
    <xsd:complexType>
      <xsd:complexContent>
        <xsd:extension base="common:AsyncRequest"/>
      </xsd:complexContent>
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="GetAllAttributeValuesResponse">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="Result" type="common:OsgpResultType"/>
        <xsd:element name="Output" type="xsd:string"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="GetSpecificAttributeValueRequest">
    <xsd:complexType>
      <xsd:complexContent>
        <xsd:extension base="tns:GetSpecificAttributeValueRequestData">
          <xsd:sequence>
            <xsd:element name="DeviceIdentification" type="common:DeviceIdentification"/>
          </xsd:sequence>
        </xsd:extension>
      </xsd:complexContent>
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="GetSpecificAttributeValueAsyncResponse">
    <xsd:complexType>
      <xsd:complexContent>
        <xsd:extension base="common:AsyncResponse"/>
      </xsd:complexContent>
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="GetSpecificAttributeValueAsyncRequest">
    <xsd:complexType>
      <xsd:complexContent>
        <xsd:extension base="common:AsyncRequest"/>
      </xsd:complexContent>
    </xsd:complexType>
  </xsd:element>
  <xsd:element name="GetSpecificAttributeValueResponse">
    <xsd:complexType>
      <xsd:complexContent>
        <xsd:extension base="common:Response">
          <xsd:sequence>
            <xsd:element name="AttributeValueData" type="xsd:string"/>
          </xsd:sequence>
        </xsd:extension>
      </xsd:complexContent>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="GetAssociationLnObjectsRequest">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="DeviceIdentification" type="common:DeviceIdentification"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="GetAssociationLnObjectsAsyncResponse">
    <xsd:complexType>
      <xsd:complexContent>
        <xsd:extension base="common:AsyncResponse"/>
      </xsd:complexContent>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="GetAssociationLnObjectsAsyncRequest">
    <xsd:complexType>
      <xsd:complexContent>
        <xsd:extension base="common:AsyncRequest"/>
      </xsd:complexContent>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="GetAssociationLnObjectsResponse">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="Result" type="common:OsgpResultType"/>
        <xsd:element name="AssociationLnList" type="tns:AssociationLnListType"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="ScanMbusChannelsRequest">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="DeviceIdentification" type="common:DeviceIdentification"/>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="ScanMbusChannelsAsyncResponse">
    <xsd:complexType>
      <xsd:complexContent>
        <xsd:extension base="common:AsyncResponse"/>
      </xsd:complexContent>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="ScanMbusChannelsAsyncRequest">
    <xsd:complexType>
      <xsd:complexContent>
        <xsd:extension base="common:AsyncRequest"/>
      </xsd:complexContent>
    </xsd:complexType>
  </xsd:element>

  <xsd:element name="ScanMbusChannelsResponse">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="Result" type="common:OsgpResultType"/>
        <xsd:element maxOccurs="4" minOccurs="0"
          name="ChannelShortId" type="tns:MbusChannelShortEquipmentIdentifier"/>
      </xsd:sequence>
    </xsd:complexType>
    <xsd:unique name="UniqueScanMbusChannelValues">
      <xsd:field xpath="tns:Channel"/>
      <xsd:selector xpath="tns:ChannelShortId"/>
    </xsd:unique>
  </xsd:element>

  <xsd:import namespace="http://www.opensmartgridplatform.org/schemas/common/2014/10"
    schemaLocation="common.xsd"/>

  <xsd:simpleType name="AttributeAccessModeType">
    <xsd:restriction base="xsd:string">
      <xsd:enumeration value="NO_ACCESS"/>
      <xsd:enumeration value="READ_ONLY"/>
      <xsd:enumeration value="WRITE_ONLY"/>
      <xsd:enumeration value="READ_AND_WRITE"/>
      <xsd:enumeration value="AUTHENTICATED_READ_ONLY"/>
      <xsd:enumeration value="AUTHENTICATED_WRITE_ONLY"/>
      <xsd:enumeration value="AUTHENTICATED_READ_AND_WRITE"/>
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:simpleType name="MethodAccessModeType">
    <xsd:restriction base="xsd:string">
      <xsd:enumeration value="NO_ACCESS"/>
      <xsd:enumeration value="ACCESS"/>
      <xsd:enumeration value="AUTHENTICATED_ACCESS"/>
    </xsd:restriction>
  </xsd:simpleType>

</xsd:schema>
